        GeneroIdentidade = v;
        UpdateTituloAnuncio()
      }
      function updatePosicaoIdentidade(v){
        PosicaoIdentidade = v;
        UpdateTituloAnuncio()
      }
      function updateGeneroProcura(v){
        GeneroProcura = v;
        UpdateTituloAnuncio()
      }
